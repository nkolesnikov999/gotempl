package layout

templ Header() {
	@HeaderStyle()
	<div class="header">
		@Menu()
		<div class="header__content">
			{ children... }
		</div>
	</div>
}

templ HeaderStyle() {
	<style>
		.header {
			display: flex;
			justify-content: center;
			flex-direction: column;
			align-items: center;
			background: #FFFFFF;
		}

		.header__content {
			width: 100%;
			max-width: 1290px;
			margin: 0 auto;
		}
	</style>
}