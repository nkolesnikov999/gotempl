package components

type InputProps struct {
	Name string
	Type string
}

templ Input(props InputProps) {
@InputStyle()
	<input id={props.Name} type={props.Type} name={props.Name} class="input" />
}

templ InputStyle() {
<style>
	.input {
		width: 488px;
		height: 48px;
		padding: 20px;
		border-radius: 12px;
		background: #f5f5f5;
		border: none;
	}
	
</style>
}