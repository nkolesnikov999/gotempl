package components

templ Label(forId string, text string) {
    @LabelStyle()
    <label for={forId} class="input-label">{ text }</label>
}

templ LabelStyle() {
<style>
    .input-label {
        display: block;
        margin: 0;
        color: #3b3234;
        font-size: 18px;
        font-weight: 600;
    }
</style>
}

